</entity>
        <entity>
            <display-name>ProductsToBuyFromCompaniesEB</display-name>
            <ejb-name>ProductsToBuyFromCompaniesBean</ejb-name>
            <local-home>ejb.entity.ProductsToBuyFromCompaniesLocalHome_1</local-home>
            <local>ejb.entity.ProductsToBuyFromCompaniesLocal_1</local>
            <ejb-class>ejb.entity.ProductsToBuyFromCompaniesBean_1</ejb-class>
            <persistence-type>Container</persistence-type>
            <prim-key-class>java.lang.Integer</prim-key-class>
            <reentrant>false</reentrant>
            <abstract-schema-name>ProductsToBuyFromCompanies</abstract-schema-name>
            <cmp-field>
                <field-name>key</field-name>
            </cmp-field>
            <primkey-field>key</primkey-field>
        </entity>
        </enterprise-beans>
<assembly-descriptor>
<container-transaction>
<method>
<ejb-name>Company</ejb-name>
<method-intf>Remote</method-intf>
<method-name>*</method-name>
</method>
<method>
<ejb-name>Company</ejb-name>
<method-intf>Home</method-intf>
<method-name>*</method-name>
</method>
<trans-attribute>Required</trans-attribute>
</container-transaction>
        <container-transaction>
            <method>
                <ejb-name>ProductsToBuyFromCompaniesBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
</ejb-jar>
